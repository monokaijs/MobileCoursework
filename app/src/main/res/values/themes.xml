<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MExpense" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="background">@color/background</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="actionMenuTextColor">@color/background</item>
        <item name="actionBarItemBackground">@color/background</item>
    </style>

    <style name="Theme.MExpense.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorOnPrimary">@color/background</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:background">@color/background</item>
        <item name="android:itemTextAppearance">@color/white</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColor">@color/white</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/background</item>
    </style>

    <style name="Theme.MExpense.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MExpense.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>